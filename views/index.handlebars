<div class="container">
    <h1 id="color-override">Eat Da Burger</h1>
    <p id="color-override">Burgers are Life!!</p>
    <br>
    <h2 id="color-override">Make a Burger</h2>
    <panel>
        <form class="create-form" id="add-burger" action="/burgers/create" method="POST">
            <div class="form-group">
                <label for="newburger" id="color-override">New Burger:</label>
                <input type="text" id="burger-name" name="burger_name"></input>
                {{!-- <input type="text" id="newburger" name="burger"> --}}
                <button type="submit" class="btn btn-success" id="addburger">What would you like?</button>
            </div>
        </form>
    </panel>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <form class="eatme">
                                    <input type="hidden" class="burgerid" name="burgerid" value={{this.id}}>
                                    <button type="submit" class="eatburger btn btn-warning" class ="eatbutton">Eat Me</button>
                                </form>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                {{!-- <button type="button" class="trashburger btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devour</button> --}}
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>
